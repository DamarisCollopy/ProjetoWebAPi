@{
    ViewData["Title"] = "Home Page";
}

@if (!User.Identity.IsAuthenticated)
{
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>
}

@if (User.Identity.IsAuthenticated)
{
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="row h-50">
        <div class="col-sm-12 h-100 d-table">
            <div class="card card-block d-table-cell align-middle">
                <ul class="navbar-nav flex-grow-1">
                    <partial name="_LoginPartial" />
                </ul>
                <ul class="navbar-nav flex-grow-1">
                    <a class="nav-link text-dark" asp-area="" asp-controller="FriendsLists" asp-action="Index">Friends</a>
                </ul>
                <ul class="navbar-nav flex-grow-1">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Index">Create Events</a>
                </ul>
                <ul class="navbar-nav flex-grow-1">
                    <a class="nav-link text-dark" asp-area="" asp-controller="UserEvents" asp-action="Index">All Events</a>
                </ul>
            </div>
        </div>
    </div>
</div>
}